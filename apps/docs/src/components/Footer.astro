---
import Logo from './Logo.astro';
---

<footer aria-labelledby="footer-heading">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
        <div class="space-y-8">
            <Logo variant="icon" size={28} />
            <p class="text-sm leading-6 text-gray-500">Where Customer Happiness Equals Your Success</p>
            <div class="flex space-x-6">
                <a href="https://github.com/divndev/resolvex" class="text-gray-400 hover:text-gray-500">
                    <span class="sr-only">Github</span>
                    <span class="i-mdi-github h-6 w-6"></span>
                </a>
                <a href="https://twitter.com/resolvexai" class="text-gray-400 hover:text-gray-500">
                    <span class="sr-only">Twitter</span>
                    <span class="i-mdi-twitter h-6 w-6"></span>
                </a>
            </div>
        </div>
        <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
            <div class="md:grid md:grid-cols-2 md:gap-8">
                <div>
                    <h3 class="text-sm font-semibold leading-6 text-gray-400 uppercase">Production</h3>
                    <ul role="list" class="mt-4 space-y-4">
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Pricing</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Roadmap</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Dashboard</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Support</a>
                        </li>
                    </ul>
                </div>
                <div class="mt-10 md:mt-0">
                    <h3 class="text-sm font-semibold leading-6 text-gray-400 uppercase">Developers</h3>
                    <ul role="list" class="mt-4 space-y-4">
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Documentation</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Discord Server</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> API Status</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="md:grid md:grid-cols-2 md:gap-8">
                <div>
                    <h3 class="text-sm font-semibold leading-6 text-gray-400 uppercase">Company</h3>
                    <ul role="list" class="mt-4 space-y-4">
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> About</a>
                        </li>
                    </ul>
                </div>
                <div class="mt-10 md:mt-0">
                    <h3 class="text-sm font-semibold leading-6 text-gray-400 uppercase">Legal</h3>
                    <ul role="list" class="mt-4 space-y-4">
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Privacy</a>
                        </li>
                        <li>
                            <a href="/todo" class="leading-6 text-gray-500 hover:text-gray-700"> Terms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24">
        <p class="text-xs leading-5 text-gray-500">&copy; 2023 ResolveX, Inc. All rights reserved.</p>
    </div>
</footer>
