---
import { Image } from 'astro:assets';
import fullLogo from '~/assets/img/full-logo.svg';
import iconLogo from '~/assets/img/icon-logo.svg';

interface Props {
    variant?: 'full' | 'icon';
    size?: number;
}

const { variant = 'full', size = 20 } = Astro.props;

const style = {
    width: 'auto',
    height: `${size}px`,
};

const src = variant === 'full' ? fullLogo : iconLogo;
const alt = variant === 'full' ? 'ResolveX Full logo' : 'ResolveX Icon logo';
---

<Image src={src} alt={alt} style={style} />
