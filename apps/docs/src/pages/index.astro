---
import Container from '~/components/Container.astro'
import FeaturesSection from '~/components/FeaturesSection.astro'
import Footer from '~/components/Footer.astro'
import Header from '~/components/Header.astro'
import HeroSection from '~/components/HeroSection.astro'
import Layout from '~/layouts/Layout.astro'
---

<Layout>
  <Container class="max-w-7xl">
    <Header />
  </Container>

  <Container class="max-w-[630px] mt-[120px]">
    <HeroSection />
  </Container>

  <Container class="max-w-6xl mt-[140px]">
    <FeaturesSection />
  </Container>

  <Container class="max-w-7xl pb-8 pt-36 sm:pt-44 lg:px-8 lg:pt-52">
    <Footer />
  </Container>
</Layout>
