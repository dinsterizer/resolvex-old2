{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "type:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": [
        "^build"
      ]
    },
    "deploy:preview": {
      "dependsOn": [
        "^build"
      ]
    },
    "deploy:production": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
